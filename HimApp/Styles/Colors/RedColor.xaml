<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="Basic" Color="#FF3F34"/>
    <SolidColorBrush x:Key="Hover" Color="#D1322A"/>
    <SolidColorBrush x:Key="Pressed" Color="#E6372E"/>
    <SolidColorBrush x:Key="Disabled" Color="#801F19"/>

    <Color x:Key="BasicColor">#FF3F34</Color>
    <Color x:Key="HoverColor">#D1322A</Color>
    <Color x:Key="PressedColor">#E6372E</Color>
    <Color x:Key="DisabledColor">#801F19</Color>
    
</ResourceDictionary>