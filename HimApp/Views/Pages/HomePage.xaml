<Page x:Class="HimApp.Views.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HimApp.Views.Pages"
      xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d"
      d:DesignHeight="637" d:DesignWidth="1104"
      Title="HomePage">

    <ScrollViewer VerticalScrollBarVisibility="Hidden">
        <StackPanel>
            <TextBlock Text="Ближайшие записи" Style="{DynamicResource TitleText}"/>
            <ScrollViewer Style="{DynamicResource ScrollViewerShow}" VerticalAlignment="Top" Background="Transparent" HorizontalScrollBarVisibility="Visible" x:Name="FOrder" VerticalScrollBarVisibility="Disabled" PreviewMouseWheel="FOrder_PreviewMouseWheel" Height="230">
                <StackPanel Orientation="Horizontal">
                    <Border Style="{DynamicResource BorderPanel}" Width="300" Margin="0 0 40 0" Height="150"/>
                    <Border Style="{DynamicResource BorderPanel}" Width="300" Margin="0 0 40 0" Height="150"/>
                    <Border Style="{DynamicResource BorderPanel}" Width="300" Margin="0 0 40 0" Height="150"/>
                    <Border Style="{DynamicResource BorderPanel}" Width="300" Margin="0 0 40 0" Height="150"/>
                    <Border Style="{DynamicResource BorderPanel}" Width="300" Margin="0 0 0 0" Height="150"/>
                </StackPanel>
            </ScrollViewer>
            <Border Style="{DynamicResource BorderPanel}" Width="300" Margin="0 0 0 0" Height="150"/>
            <Border Style="{DynamicResource BorderPanel}" Width="300" Margin="0 0 0 0" Height="150"/>
            <Border Style="{DynamicResource BorderPanel}" Width="300" Margin="0 0 0 0" Height="150"/>
            <Border Style="{DynamicResource BorderPanel}" Width="300" Margin="0 0 0 0" Height="150"/>
        </StackPanel>
    </ScrollViewer>
</Page>
